<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{student}}</title>
    <link rel="stylesheet" href="../../styles/global.css">
    <link rel="stylesheet" href="../../styles/student_index.css">
</head>
<body>
    <a href="../../index.html" id="student-list">Student List</a>
    <h1>{{student}}</h1> 
    <div id="container">
        <div id="file-list">
            <h2>File List</h2>
            {{#each files}}
                <a href="./{{this.html_path}}">{{this.java_path}}</a>
            {{/each}}
            <footer>
                <a class="button" href="../{{prev_student}}">{{prev_student}}</a>
                <a class="button" href="../{{next_student}}">{{next_student}}</a>
            </footer>
        </div>

        <div id="right-sidebar" class="open">
                {{#each test_contexts}}
                    <h3>
                        {{this.test_package_name}}
                    </h3>
                    {{#if this.compile_error}}
                        <p>Compile Error</p>
                    {{/if}}

                    {{#if this.other_error}}
                        <p>Unknown error</p>
                    {{/if}}

                    {{#if this.not_ran}}
                        <p>Not Ran</p>
                    {{/if}}

                    {{#each subpackages}}
                        <div>
                            <h4>{{this.subpackage_name}}</h4>
                            {{#if (and this.passing_tests (not this.failing_tests 0))}}
                                <p>Ok</p>
                            {{else}}
                                <details>
                                    <summary>Passing</summary>
                                    {{#each this.passing_tests}}
                                    <p>
                                        {{this.name}}
                                    </p>
                                    {{/each}}
                                </details>

                                <details open>
                                    <summary>Failing</summary>
                                    {{#each this.failing_tests}}
                                    <details>
                                        <summary style="color: red;">
                                            {{this.name}}
                                        </summary>
                                        <p>
                                            {{this.msg}}
                                        </p>
                                    </details>
                                    {{/each}}
                                </details>
                            {{/if}}
                        </div>

                    {{/each}}

                {{/each}}
        </div>
    </div>
</body>
</html>