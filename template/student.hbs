<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.11.1/styles/default.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.11.1/highlight.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.11.1/languages/java.min.js"></script>
    <script>hljs.highlightAll();</script>
    <script src="../../styles/sidebars.js" defer></script>
    <link rel="stylesheet" href="../../styles/global.css">
    <link rel="stylesheet" href="../../styles/index.css">
    <link rel="stylesheet" href="../../styles/student.css">
</head>

<body>
    <header>
        <div class="left">
            <button onclick="window.location.href=../../index.html" id="back-button">Student List</button>
            <button id="left-sidebar-button">Toggle File List</button>
            <button id="right-sidebar-button">Toggle Test Results</button>
            <button id="bottom-sidebar-button">Toggle Tests</button>
        </div>
        <div class="middle">
            <h1>{{student}}</h1>
        </div>
        <div class="right"></div>
    </header>
    <div id="container">
        <div id="left-sidebar" class="open">
            <h2>File List</h2>
            {{#each files}}
                <a href="./{{this.html_path}}">{{this.java_path}}</a>
            {{/each}}
            <div id="prev-next-buttons">
                <a class="button" href="../{{prev_student}}">{{prev_student}}</a>
                <a class="button" href="../{{next_student}}">{{next_student}}</a>
            </div>
        </div>
        <div id="code">
            <pre><code class="language-java">
                {{code}}
            </code></pre>
        </div>
        <div id="right-sidebar" class="open">
                {{#each test_contexts}}
                    <p>
                        {{this.test_package_name}}
                    </p>
                    {{#if this.compile_error}}
                        <p>Compile Error</p>
                    {{/if}}

                    {{#if this.other_error}}
                        <p>Unknown error</p>
                    {{/if}}

                    {{#if this.not_ran}}
                        <p>Not Ran</p>
                    {{/if}}

                    {{#each subpackages}}
                        <div>
                            <p>{{this.subpackage_name}}</p>

                            <details>
                                <summary>Passing</summary>
                                {{#each this.passing_tests}}
                                <p>
                                    {{this.name}}
                                </p>
                                {{/each}}
                            </details>

                            <details open>
                                <summary>Failing</summary>
                                {{#each this.failing_tests}}
                                <details>
                                    <summary style="color: red;">
                                        {{this.name}}
                                    </summary>
                                    {{this.msg}}
                                </details>
                                {{/each}}
                            </details>
                        </div>

                    {{/each}}

                {{/each}}
        </div>

    </div>
</body>

</html>